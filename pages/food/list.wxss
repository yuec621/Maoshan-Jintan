/* pages/Scenic/list.wxss */

.bigImage{
  margin:0 auto;
  width:100%;
  margin-top:0;
}
.bigTitle{
  text-align: center;
  font-size:16px;
  padding:40rpx 0;
}

.title-big{
  font-weight: 700;
  font-size: 24px;
  margin:10px 0;
}
.first-bg p{
  display:inline-block;
  color: #cccccc;
 font-weight: 600;
 font-size: 24px;
}
.item{
  width: 45%;
  height: 260rpx;
  border-radius: 8rpx 8rpx 0 0;
  overflow: hidden;
  float: left;
   margin: 0.6rem 0 0 0.5rem;
   position: relative;

}
.item-img{
  width: 100%;
  height: 100%;
}

.image-title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 28rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: absolute;
  bottom: 0;
}
.loading{
  clear: both;
  width:100%;
  height: 46px;
  background-color: #eee;
  line-height: 46px;
  text-align: center;
}
/* pages/Scenic/list.wxss */
.bg{
    background-color: #eee;
}
.first-bg{
  background-color: #fff;
  overflow: hidden;
  margin-top: 0.6rem;
  padding-bottom: 1rem;
  padding-top: 1rem;
}
.title-big{
  font-weight: 700;
  font-size: 24px;
}
.first-bg p{
  display:inline-block;
  color: #cccccc;
 font-weight: 600;
 font-size: 24px;
}
.item{
  width: 30%;
  height: 220rpx;
  border-radius: 8rpx 8rpx 0 0;
  overflow: hidden;
  float: left;
   margin: 0.6rem 0 0 0.5rem;
   position: relative;

}
.item-img{
  width: 100%;
  height: 100%;
}

.image-title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 28rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: absolute;
  bottom: 0;
}
.loading{
  clear: both;
  width:100%;
  height: 46px;
  background-color: #eee;
  line-height: 46px;
  text-align: center;
}
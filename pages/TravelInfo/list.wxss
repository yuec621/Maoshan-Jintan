/* pages/TravelInfo/list.wxss */
.container-home {
    width: 100%;
}

/*轮播图*/

swiper {
    height: 12rem;
}

.slide-image {
    width: 100%;
    height: 100%;
    border-radius: 1px;
}

.des-title {
    overflow: hidden;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    overflow-x: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    font-size: 28rpx;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    position: absolute;
    bottom: 0;
}

.tablist {
    display: flex;
    background: #fff;
      height: 100rpx;
  }
  
  .tablist .item {
    flex: auto;
      display: flex;
      position: relative;
      justify-content: center;
      align-items: center;
      font-size: 18px;
      color: #9b9b9b;
       }
  
  .tablist .item.select {
      color: #1d95d4;
        }
  
  .tablist .item.select::after {
      content: "";
      height: 20rpx;
      display: block;
      position: absolute;
      left: 0;
      bottom: -10px;
      right: 0;
    
      background: #bbe3f9;
  }
  .navContainer .grey{
    width: 100%;
    height: 20rpx;
    background-color: #f5f5f5;
  }
  .content{
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
  }

/* 分隔带 */
.grey {
    width: 100%;
    height: 0.3rem;
    background-color: #ddd;
}
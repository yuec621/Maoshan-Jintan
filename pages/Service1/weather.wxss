.container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #4D8AD7;
  color: #fff;
  font-size: 18px;
}
.container text{
  display: block;
  margin: auto;
}
.weather-position-address {
    background: url(http://www.cztour.com/wxapp/weather/dw.png) no-repeat 0 3px;
    background-size: 15px auto;
    padding-left: 18px;
    width: 100%;
    position: absolute;
    top: 1.5rem; 
    left: 1rem;
    font-size: 0.8rem;
}

.weather-temperature{
    width: 100%;
    position: absolute;
    top:12rem; 
    left: 1rem;
    font-size: 4rem;
    line-height: 2.3rem;
    text-align: left;
}
.weather-str{
  font-size: 2rem;
  position: absolute;
  top:0.6rem; 
  left: 7rem;
}

.oc{
  font-size: 1.5rem;
  position: absolute;
  top:-1rem; 
  left: 4.6rem;
}

.windpower{
  width: 100%;
  position: absolute;
  top:16rem; 
  left: 1rem;
  font-size: 1rem;
  line-height: 2.3rem;
  text-align: left;
}

.humidity{
  width: 100%;
  position: absolute;
  top:18rem; 
  left: 1rem;
  font-size: 1rem;
  line-height: 2.3rem;
  text-align: left;
}

.time{
  display:table;
  float: right;
  padding-right: 2.5rem;
}
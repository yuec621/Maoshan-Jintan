<view>
  <view class="map_text">
    <text class="h1">{{textData.name}}</text>
    <text>{{textData.desc}}</text>
  </view>

  <button class="navigatebtn" bindtap="navigatetap">导航</button> 

  <button class="searchmorebtn" bindtap="bindInput">搜索更多</button> 


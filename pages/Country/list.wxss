/* pages/Country/list.wxss */
.bg{
    background-color: #fff;
  }

.item-img{
  padding: 0;
  width: 100%;
  height: 11rem;
  margin: 0 auto 0 auto;
  display: block;
  border-radius: 0.4rem 0.4rem 0 0;

 }
.image-box{
  width: 96%;
  height: 13rem;
  margin-left: 0.4rem;
  margin-top: 0.8rem;
 box-shadow: 1px 1px 2px #ccc;
 border-radius: 0.4rem ;
}
.title{
  text-align: left;
  color: #000;
  font-weight: 700;
  width: 100%;
  font-size: 0.8rem;
   height: 2rem;
  line-height: 2rem;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 0;
  padding: 0;
  margin: 0;
    padding-left: 1.4rem;
}

.loading{
  clear: both;
  width:100%;
  height: 46px;
  background-color: #eee;
  line-height: 46px;
  text-align: center;
  font-size: 12px;
}
/* pages/HomePage/Index.wxss */

.container-home {
  width: 100%;
}

/*轮播图*/

swiper {
  height: 12rem;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 1px;
}


.grey {
  width: 100%;
  height: 0.3rem;
  background-color: #ddd;
}

/*首页菜单*/

.table-menu {
  margin: 1.6rem 0 1.6rem 0;

}

.tr {
  width: 100%;
  height: auto;
  margin: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.td {
  width: 25%;
  text-align: center;
  font-size: 0.8rem;
  margin-top: 0.4rem;
}

.td image {
  width: 80%;
  height: auto;
}

/*视频推荐*/

.video-recommend {
  clear: both;
  background-color: white;
  margin: auto;
  width: 90%;
  text-align: center;
  overflow: hidden;
}


.label-recommend-label-line {
  width: 100%;

  display: flex;
  flex-direction: row;
  height: 2.4rem;
  align-items: center;
  justify-content: space-between;

}

.label-recommend-label-block {
margin-left: 0.6rem;
  width: 0.8rem;
  height: 1.4rem;
  border: 1px solid #F9BE00;
}

.label-recommend-label-title {
  display: inline-block;
  font-family: '宋体';
  font-weight: bolder;
  font-size: 0.9rem;
  margin-left: 0.4rem;
}

.more {
  color: #aaa;
  font-size: 13px;
  padding: 0;
  height: 16px;
  line-height: 16px;

}

.more-right {
  display: inline-block;
  color: #aaa;
  font-size: 15px;
  padding: 0 2px;
  margin-right: 1rem;
  height: 16px;
  line-height: 16px;

}

.view-recommend {
  margin: 0 auto;
  overflow: hidden;
  margin-left: 0.3rem;
}

.information-recommend {
  margin: 0 auto;
  overflow: hidden;
  margin-left: 0.3rem;
}

.view-list {
  width: 100%;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}


.video-item-title {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.viewImgContainer {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.viewImg {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.videoOpenImg {
  width: 80rpx;
  height: 80rpx;
  margin: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}


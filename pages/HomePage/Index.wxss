.information-list {
  width: 29%;
  height: 220rpx;
  border-radius: 6rpx;
  overflow: hidden;
  float: left;
  position: relative;
  margin: 0 0 0.6rem 0.68rem;
  box-shadow: 0.1rem 0.1rem 0.1rem #ddd;
}

.recommend-list image {
  width: 100%;
  height: 200rpx;
}

.information-list image {
  width: 100%;
  height: 140rpx;
}

.information-item-title {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
}


.recommend-item-title {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 28rpx;
  background: rgba(0, 0, 0, 0.45);
  color: #fff;
  position: absolute;
  bottom: 0;
}


